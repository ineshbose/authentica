generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db.sqlite3"
}

model User {
  id        Int     @default(autoincrement()) @id
  email     String  @unique
  password  String
  pubkey    String  @unique
  documents Document[]
}

model Document {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}