{
  "name": "authentica",
  "version": "1.0.0",
  "repository": "https://github.com/ineshbose/authentica",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "gen": "yarn gen:graphql && yarn gen:prisma && yarn gen:nexus",
    "gen:graphql": "graphql-codegen --config codegen.yml",
    "gen:prisma": "prisma generate",
    "gen:nexus": "ts-node --transpile-only -P nexus.tsconfig.json pages/api",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\""
  },
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "@geist-ui/core": "^2.3.0",
    "@geist-ui/icons": "^1.0.1",
    "@next-auth/prisma-adapter": "^1.0.1",
    "@prisma/client": "^3.9.2",
    "apollo-server-micro": "^3.6.3",
    "graphql": "^15.3.0",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "next": "^12.0.10",
    "nexus": "^1.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.5",
    "@graphql-codegen/typescript-operations": "2.3.2",
    "@graphql-codegen/typescript-react-apollo": "3.2.8",
    "@types/graphql": "^14.5.0",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "^17.0.16",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "prisma": "^3.9.2",
    "ts-node": "10.5.0",
    "typescript": "^4.5.5",
    "yorkie": "^2.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "gitHooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "server/**/*.{js,ts}": [
      "yarn eslint server --fix"
    ],
    "**/*.{js,ts,jsx,tsx}": [
      "yarn eslint . --fix"
    ]
  }
}
