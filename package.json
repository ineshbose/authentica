{
  "name": "authentica",
  "version": "1.0.0",
  "repository": "https://github.com/ineshbose/authentica",
  "scripts": {
    "runserver": "nodemon",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@geist-ui/core": "^2.3.0",
    "apollo-server-express": "^3.6.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "next": "^12.0.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.3",
    "type-graphql": "^1.1.1",
    "typeorm": "0.2.41"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.16",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "3.3.0",
    "typescript": "^4.5.5",
    "yorkie": "^2.0.0"
  },
  "nodemonConfig": {
    "exec": "ts-node --project tsconfig.server.json server/index.ts",
    "watch": [
      "server"
    ],
    "ext": "ts"
  },
  "gitHooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "server/**/*.{js,ts}": [
      "eslint server --fix"
    ],
    "**/*.{js,ts,jsx,tsx}": [
      "eslint . --fix"
    ]
  }
}
